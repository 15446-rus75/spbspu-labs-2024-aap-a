const char* dribas::isChar(const char* string, char symbol)
{
  if (!string) {
    return string;
  }
  return (*string == symbol) ? (string + 1) : nullptr;
}

const char* dribas::isLetter(const char* string)
{
  if (!string) {
    return string;
  }
  char letter[9] = {'a', 'b', 'c', 'd', 'e', 'f', 'x', 'y', 'z'};
  for (size_t i = 0; i < 9; i++) {
    if (dribas::isChar(string, letter[i])) {
      return (string + 1);
    }
  return nullptr;
  }
}

const char* dribas::isNumber(const char* string)
{
  if (!string) {
    return string;
  }
  return (std::isdigit(*string)) ? (string + 1) : nullptr;
}

const char* dribas::isUnsignInt(const char* string)
{
  if (!string) {
    return string;
  }
  const char* next = isNumber(string);
  if (const char* countinues = isUnsignInt(next)) {
    return countinues;
  }
  return next;
}

const char* dribas::isMultiplier(const char* string)
{
  if (!string) {
    return string;
  }
  auto next = isUnsignInt(string);
  if (auto countinues = isLetter(next)) {
    return countinues;
  }
  return next;
}

